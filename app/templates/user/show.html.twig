{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="topnav">

                <a href="{{ url('book_index') }}">{{ 'books'|trans }}</a>

        {% if is_granted('ROLE_ADMIN') %}

            <div>
                <a href="{{ url('category_index') }}">{{ 'category_list'|trans }}</a>
            </div>

        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <div>
                <a href="{{ url('reservation_user') }}">{{ 'myreser'|trans }}</a>
            </div>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}

            <div>
                <a href="{{ url('reservation_index') }}">{{ 'reservations'|trans }}</a>
            </div>
        {% endif %}
        <a href="{{ url('user_show') }}">{{ 'account'|trans }}</a>

        {% if is_granted('ROLE_ADMIN') %}
            <div>
                <a href="{{ url('user_index') }}" >{{ 'user'|trans }}</a>
            </div>
        {% endif %}

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

            <div>
                <a href="{{ url('app_logout') }}">{{ 'logout'|trans }}</a>
            </div>
        {% else %}
            <div>
                <a href="{{ url('app_login') }}">{{ 'login'|trans }}</a>
            </div>
        {% endif %}


    </div>

    <h1 class="napis">{{ 'title_category_details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label_roles'|trans }}</dt>
            <dt>{{ user.roles|join(', ') }}</dt>
        </dl>

    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}